<?xml version="1.0" encoding="utf-8"?>
<com.pejko.portal.views.RotateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form1_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:angle="90">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ltRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/black"
        tools:context=".activities.MagicActivity">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:maxLines="2"

            android:text="Dnes Skvela Ponuka"
            android:textColor="@android:color/white"
            android:textSize="18dp" />


        <LinearLayout
            android:id="@+id/main1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/pole1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/txt_nadpis_spesl"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tovar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Akciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový Tovar"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_cena1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="30€"
                        android:textColor="@android:color/white"
                        android:textSize="34dp" />

                    <TextView
                        android:id="@+id/txt_extra1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="/kus"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pole2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/txt_nadpis_spesl"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tovar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Akciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový Tovar"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_cena2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="30€"
                        android:textColor="@android:color/white"
                        android:textSize="34dp" />

                    <TextView
                        android:id="@+id/txt_extra2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="/kus"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pole3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/txt_nadpis_spesl"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tovar3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Akciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový TovarAkciový Tovar"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_cena3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="30€"
                        android:textColor="@android:color/white"
                        android:textSize="34dp" />

                    <TextView
                        android:id="@+id/txt_extra3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="/kus"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.pejko.portal.views.RotateLayout>